<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <ImageView
        android:id="@+id/iv_icon"
        android:background="@drawable/bg_house"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView

        android:layout_marginLeft="10dp"
        android:id="@+id/tv_houseName"
        android:layout_toRightOf="@id/iv_icon"
        style="@style/font_3_15"
        android:text="4444444444444444444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/iv_houseAddress"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_houseName"
        android:layout_toRightOf="@id/iv_icon"
        style="@style/font_9_15"
        android:text="4444444444444444444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>