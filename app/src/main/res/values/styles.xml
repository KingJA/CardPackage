<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="font_3_15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/font_3</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_3_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_3</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_9_15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/font_9</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_0_20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/font_0</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_f_20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/font_f</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_f_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_f</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_6_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_6</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_f_15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/font_f</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="font_n_15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/font_n</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--普通水平分割线-->
    <style name="divider_nomal_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_divider</item>
    </style>
</resources>
